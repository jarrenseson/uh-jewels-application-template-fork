enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

enum Condition {
  excellent
  good
  fair
  poor
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition
  owner     String
}

model ShippingInfo {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  address1 String
  address2 String
  city String
  zip String
  state String
  country String
}
